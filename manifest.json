{
  "manifest_version": 3,
  "name": "ABESConnect - Auto Wi-Fi Login",
  "version": "1.0.0",
  "description": "Automatically logs into the ABES Engineering College captive portal.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "http://192.168.1.254:8090/*",
    "https://192.168.1.254:8090/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ABESConnect"
  },
  "content_scripts": [
    {
      "matches": [
        "http://192.168.1.254:8090/*",
        "https://192.168.1.254:8090/*"
      ],
      "js": [
        "config.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}